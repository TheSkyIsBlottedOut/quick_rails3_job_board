<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :company %><br />
      <%= f.text_field :company %>
    </div>
  
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
  </fieldset>
  <input type='submit'/>
<% end %>
